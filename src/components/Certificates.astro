---
import { siteConfig } from "../config";
const hasCertificates = siteConfig.certificates && siteConfig.certificates.length > 0;
---

{hasCertificates && (
  <section id="certificates" class="p-8 sm:p-12 md:p-16 lg:p-24">
    <div>
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start animate-fade-in animation-delay-200">
        <div class="lg:col-span-4">
          <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-5xl font-bold text-gray-900">
            Certificates
          </h2>
          <div
            class="w-[75px] h-[5px] mt-2 rounded-full"
            style={`background-color: ${siteConfig.accentColor}`}
          />
        </div>

        <div class="lg:col-span-8">
          <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
            {siteConfig.certificates.map((cert) => (
              <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-2 hover:shadow-md transition-shadow duration-300">
                <img
                  src={cert.filename}
                  alt={cert.alt}
                  class="object-cover w-full h-48 rounded-md"
                  loading="lazy"
                />
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>
)}
