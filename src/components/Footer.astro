---
import { siteConfig } from "../config";

const currentYear = new Date().getFullYear();
---

<footer class="bg-white border-t border-gray-300">
  <div class="mx-auto max-w-6xl px-6 py-4 lg:px-8">
    <div class="relative flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4 w-full">

      <!-- Social Icons (Left) -->
      <div class="flex justify-center lg:justify-start space-x-4 text-gray-700">
        <!-- Email Icon -->
        <a
          href={`mailto:${siteConfig.social.email}`}
          aria-label="Email"
          class="hover:text-[var(--accent-color)] transition-colors"
          style={`--accent-color: ${siteConfig.accentColor}`}
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75
              m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25
              m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
          </svg>
        </a>

        <!-- Twitter/X Icon -->
        <a
          href={siteConfig.social.twitter}
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Twitter"
          class="hover:text-[var(--accent-color)] transition-colors"
          style={`--accent-color: ${siteConfig.accentColor}`}
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 3l12 18M6 21L18 3" />
          </svg>
        </a>

        <!-- GitHub Icon -->
        <a
          href={siteConfig.social.github}
          target="_blank"
          rel="noopener noreferrer"
          aria-label="GitHub"
          class="hover:text-[var(--accent-color)] transition-colors"
          style={`--accent-color: ${siteConfig.accentColor}`}
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 2C6.48 2 2 6.48 2 12a10 10 0 006.84 9.5
              c.5.1.68-.22.68-.48v-1.67c-2.78.6-3.37-1.34-3.37-1.34
              a2.65 2.65 0 00-1.12-1.48c-.9-.62.06-.6.06-.6
              a2.1 2.1 0 011.53 1.04 2.14 2.14 0 002.92.84
              2.14 2.14 0 01.64-1.33c-2.22-.26-4.56-1.11-4.56-4.95
              a3.86 3.86 0 011.03-2.7 3.58 3.58 0 01.1-2.66
              s.84-.27 2.75 1.03a9.47 9.47 0 015 0
              c1.9-1.3 2.75-1.03 2.75-1.03
              a3.58 3.58 0 01.1 2.66 3.86 3.86 0 011.03 2.7
              c0 3.85-2.34 4.69-4.57 4.95
              a2.4 2.4 0 01.68 1.87v2.77c0 .27.18.59.69.48
              A10 10 0 0022 12c0-5.52-4.48-10-10-10z" />
          </svg>
        </a>
      </div>

      <!-- Centered copyright -->
      <p class="text-xs text-gray-400 text-center flex-1 lg:static">
        Â© {currentYear} {siteConfig.name}. All rights reserved.
      </p>

      <!-- CV Button (Right) -->
      <div class="flex justify-center lg:justify-end">
        <a
          href={siteConfig.cv.file}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block bg-blue-600 text-white text-sm font-semibold px-4 py-2 rounded-lg shadow hover:bg-blue-700 transition"
        >
          {siteConfig.cv.buttonText}
        </a>
      </div>
    </div>
  </div>
</footer>
